y
-1
EOF

# ------------------------------------------------------------------
# Construct LW spectral file
# ------------------------------------------------------------------

rm -f sp_lw_ga8 sp_lw_ga8_k
echo 'Creating sp_lw_ga8...'
prep_spec <<EOF > prep_sp_lw_ga8_log
../../data/spectra/ga7/sp_lw_ga7
n
sp_lw_ga8
11
soluble_9.avg
y
11
dustlike_9.avg
y
11
oceanic_9.avg
y
11
soot_9.avg
y
11
sulphuric_9.avg
y
11
accumsulp_9.avg
y
11
aitkensulp_9.avg
y
11
freshsoot_bond_9.avg
y
11
agedsoot_bond_9.avg
y
11
seasaltfilm_9.avg
y
11
seasaltjet_9.avg
y
11
dust_div1_9.avg
y
11
dust_div2_9.avg
y
11
dust_div3_9.avg
y
11
dust_div4_9.avg
y
11
